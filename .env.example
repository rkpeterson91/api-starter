# Environment: development | test | staging | production
NODE_ENV=development
PORT=3000

# Database Configuration
# Using 'postgres' superuser for both development and tests
# Create this user if it doesn't exist: psql -U $(whoami) -d postgres -c "CREATE USER postgres WITH SUPERUSER PASSWORD 'postgres';"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=api_starter_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false  # Set to 'true' in staging/production for secure connections

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
APP_URL=http://localhost:3000

# OAuth Providers (Optional - configure any or all)
# Google: https://console.cloud.google.com/apis/credentials
# GitHub: https://github.com/settings/developers
# Microsoft: https://portal.azure.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
