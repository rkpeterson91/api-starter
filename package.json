{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "Barebones Node.js API with TypeScript, Fastify, Postgres, and Sequelize",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:init": "tsx src/scripts/init-db.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "setup": "pnpm install && pnpm db:init"
  },
  "keywords": [
    "fastify",
    "typescript",
    "postgres",
    "sequelize"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.2",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.17.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
