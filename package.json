{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "Barebones Node.js API with TypeScript, Fastify, Postgres, Sequelize, and Swagger/OpenAPI documentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:init": "tsx src/scripts/init-db.ts",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:status": "sequelize-cli db:migrate:status",
    "migrate:create": "sequelize-cli migration:generate --name",
    "setup": "pnpm install && pnpm db:init && pnpm migrate",
    "setup:cloud": "pnpm install && pnpm build && pnpm migrate",
    "quickstart": "./scripts/quickstart.sh",
    "customize": "./scripts/customize.sh",
    "docker:build": "docker build -t api-starter .",
    "docker:run": "docker run -p 3000:3000 --env-file .env api-starter",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky || true"
  },
  "keywords": [
    "fastify",
    "typescript",
    "postgres",
    "sequelize"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.2",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.17.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "sequelize-cli": "^6.6.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": "prettier --write"
  }
}
